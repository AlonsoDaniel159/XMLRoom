<!-- RUTA: app/src/main/res/layout/dialog_add_insect.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivInsectImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/select_insect_image"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera" />
    <!-- Puedes usar @drawable/ic_add_a_photo si creas ese Ã­cono -->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_default">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInsectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insect_name"
            android:inputType="textCapWords" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
