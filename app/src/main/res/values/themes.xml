<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.XMLRoom" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.XMLRoom" parent="Base.Theme.XMLRoom" />
    <style name="Theme.XMLRoom.Starting" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/material_dynamic_primary100</item>

        <!-- Icono central (logo de tu app) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Duración de la animación (opcional) -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Tema al que cambiar después del splash -->
        <item name="postSplashScreenTheme">@style/Theme.XMLRoom</item>
    </style>
    <!-- En res/values/themes.xml, dentro de la etiqueta <resources> -->

    <!-- Estilo para el PopupMenu -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <!-- Tamaño del texto -->
        <item name="android:textSize">14sp</item>  <!-- ✅ Reducir tamaño (por defecto es 16sp) -->

        <!-- Color del texto -->
        <item name="android:textColor">@color/black</item>

        <!-- Padding interno -->
        <item name="android:dropDownVerticalOffset">8dp</item>  <!-- ✅ Offset vertical (baja el menú) -->
        <item name="android:dropDownHorizontalOffset">0dp</item>

        <!-- Elevación -->
        <item name="android:popupElevation">8dp</item>

        <!-- ✅ CLAVE:   Offset vertical (baja el menú) -->
        <item name="android:dropDownVerticalOffset">8dp</item>  <!-- Aumenta esto si quieres más espacio -->

        <!-- ✅ Offset horizontal (mueve a la derecha/izquierda) -->
        <item name="android:dropDownHorizontalOffset">0dp</item>  <!-- Negativo = izquierda, positivo = derecha -->

    </style>


</resources>